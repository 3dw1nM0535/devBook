{
  "extends": ["prettier", "airbnb", "prettier/react"],
  "plugins": ["prettier"],
  "parser": "babel-eslint",
  "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "impliedStrict": true,
        "jsx": true
        }
    },
  "rules": {
      "semi": ["error", "always"],
      "quotes": ["error", "double"],
      "indent": ["error", 2],
      "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
    },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
    }
}
